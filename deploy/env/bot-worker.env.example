# Required
# Local listen port. Use a unique port per replica on the same host.
PORT=3000
# GitHub App webhook secret.
GITHUB_WEBHOOK_SECRET=replace_with_github_webhook_secret
# GitHub App ID.
GITHUB_APP_ID=123456
# GitHub App private key PEM with escaped newlines.
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----\n"
# Backend base URL serving /internal/v2/* endpoints.
BACKEND_BASE_URL=https://sitg.io
# Service bot key ID for internal auth.
BACKEND_BOT_KEY_ID=bck_live_replace_me
# Service bot HMAC secret paired with BACKEND_BOT_KEY_ID.
BACKEND_INTERNAL_HMAC_SECRET=replace_with_bot_service_hmac_secret

# Recommended
# Stable unique worker identity (logs and outbox claim/result signatures).
WORKER_ID=bot-worker-prod-1
OUTBOX_POLLING_ENABLED=true
OUTBOX_POLL_INTERVAL_MS=5000
OUTBOX_CLAIM_LIMIT=25

# Optional
# Override for GitHub Enterprise or mocks.
GITHUB_API_BASE_URL=https://api.github.com
# Optional bearer token if backend is configured to require it.
BACKEND_SERVICE_TOKEN=
